<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Savings Tracker"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Monthly Income -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Income"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etMonthlyIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your monthly income"
            android:inputType="numberDecimal"/>

        <!-- Category Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expense Category"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/expense_categories"/>

        <!-- Amount -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount Spent"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount"
            android:inputType="numberDecimal"/>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description (Optional)"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Fuel, groceries, lunch"/>

        <!-- Add Expense Button -->
        <Button
            android:id="@+id/btnAddExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Expense"
            android:layout_marginTop="20dp"
            android:backgroundTint="#4CAF50"/>

        <!-- Calculate Savings Button -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Monthly Savings"
            android:layout_marginTop="10dp"
            android:backgroundTint="#2196F3"/>

        <!-- Results Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:background="#E8F5E9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly Summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvFoodExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food: 0.00 MAD"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvTravelExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motorcycle Travel: 0.00 MAD"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvTotalExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Expenses: 0.00 MAD"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvSavings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly Savings: 0.00 MAD"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvCapital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yearly Capital: 0.00 MAD"
                android:textSize="16sp"
                android:textColor="#1976D2"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
