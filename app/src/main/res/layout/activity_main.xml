        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount Spent"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount"
